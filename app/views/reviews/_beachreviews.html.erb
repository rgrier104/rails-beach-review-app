<h3>Reviews for <%= beach.name %>:</h3>

<% beach.reviews.each do |review| %>
        <div class='card review_card' style="width: 18rem;">
            <div class="card-body text-center">
            <h5 class='card-title'><%= review.overall_rating %> stars</h5>
                <p class="card-text">Reviewed by <%= review.user.firstname %> on <%= review.date_updated %>: 
                <%= review.overall_description %> </p>
        
                <%= link_to "Go to review", review_path(review), class:'card-link'%>
            </div>
        </div>

<% end %>

<%= link_to "Create Review for #{beach.name}", new_beach_review_path(beach.id) %>