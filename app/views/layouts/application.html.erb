<!DOCTYPE html>
<html>
  <head>
    <title>BeachReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #24C4CF;">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user), class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "All Beaches", beaches_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "All Reviews", reviews_path, class:"nav-link" %>
            <li>
            <li class="nav-item">
              <%= link_to "Create Review", new_review_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Log Out", logout_path, method: :delete, class:"nav-link" %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
    <% end %>
    <br><br>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
